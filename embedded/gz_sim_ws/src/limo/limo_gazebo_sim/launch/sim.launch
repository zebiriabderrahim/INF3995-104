<?xml version="1.0"?>
<launch>    
    <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/empty.world"/>
    <!-- Launch Gazebo with the empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- BEGIN ROBOT 1-->
    <group ns="robot1">
        <param name="tf_prefix" value="robot1_tf" />
        <include file="$(find limo_gazebo_sim)/launch/one_robot.launch" >
            <arg name="init_pose" value="-x 0 -y 0 -z 0" />
            <arg name="robot_name"  value="Robot1" />
            <arg name="robot_namespace" value="/robot1"/>
        </include>
    </group>

    <!-- BEGIN ROBOT 2-->
    <group ns="robot2">
        <param name="tf_prefix" value="robot2_tf" />
        <include file="$(find limo_gazebo_sim)/launch/one_robot.launch" >
            <arg name="init_pose" value="-x 0 -y 1 -z 0" />
            <arg name="robot_name"  value="Robot2" />
            <arg name="robot_namespace" value="/robot2"/>
        </include>
    </group>
</launch>
