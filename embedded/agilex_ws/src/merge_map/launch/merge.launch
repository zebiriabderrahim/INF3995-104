<launch>
<!-- Initial position for the first turtlebot -->
<arg name="first_tb3_x_pos" default="0.0"/>
<arg name="first_tb3_y_pos" default="0.0"/>
<arg name="first_tb3_z_pos" default="0.0"/>
<arg name="first_tb3_yaw" default="0.0"/>

<!-- Initial position for the second turtlebot -->
<arg name="second_tb3_x_pos" default="0.0"/>
<arg name="second_tb3_y_pos" default="0.0"/>
<arg name="second_tb3_z_pos" default="0.0"/>
<arg name="second_tb3_yaw" default="0.0"/>

<!-- Pass the first turtlebot's position to /robot1/map_merge -->
<param name="/robot1/map_merge/init_pose_x" value="$(arg first_tb3_x_pos)"/>
<param name="/robot1/map_merge/init_pose_y" value="$(arg first_tb3_y_pos)"/>
<param name="/robot1/map_merge/init_pose_z" value="$(arg first_tb3_z_pos)"/>
_<param name="/robot1/map_merge/init_pose_yaw" value="$(arg first_tb3_yaw)"  />

<!-- Pass the second turtlebot's position to /robot2/map_merge -->
<param name="/robot2/map_merge/init_pose_x" value="$(arg second_tb3_x_pos)"/>
<param name="/robot2/map_merge/init_pose_y" value="$(arg second_tb3_y_pos)"/>
<param name="/robot2/map_merge/init_pose_z" value="$(arg second_tb3_z_pos)"/>
<param name="/robot2/map_merge/init_pose_yaw" value="$(arg second_tb3_yaw)"  />

<!-- Run the multirobot_map_merging node -->
<node pkg="multirobot_map_merge" type="map_merge" respawn="false" name="map_merge" output="screen">
  <param name="merged_map_topic" value="/merged_map"/>
  <param name="world_frame" value="map"/>
  <param name="known_init_poses" value="true"/>
  <param name="merging_rate" value="0.5"/>
  <param name="discovery_rate" value="0.05"/>
  <param name="estimation_rate" value="0.1"/>
  <param name="estimation_confidence" value="1.0"/>
  <remap from="/robot1/map" to="/robot1/map"/>
  <remap from="/robot2/map" to="/robot2/map"/>
</node>
        <!-- **************** Visualization **************** -->
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find limo_bringup)/rviz/navigation_ackerman.rviz"/>

</launch>
